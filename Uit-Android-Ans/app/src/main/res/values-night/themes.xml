<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UIT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        //status bar color
        <item name="android:statusBarColor">#19999A</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#19999A</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_out</item>
        <item name="android:windowExitAnimation">@anim/zoom_in</item>
    </style>

    <!--    Bottom Sheet Dialog-->
    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--For slider-->
    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip"/>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip"/>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider"/>

    <style name="ThemeOverlay.App.Slider" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/app_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
        <item name="colorPrimary">@color/half_white</item>
        <item name="colorOnPrimary">@color/app_color</item>
        <item name="colorOnSurface">@color/app_color</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="DefaultAnimation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowEnterTransition">@transition/default_window_fade</item>
        <item name="android:windowExitTransition">@transition/default_window_fade</item>
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>