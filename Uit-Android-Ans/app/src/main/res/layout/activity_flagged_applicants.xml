<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uit_admin.welcome.FlaggedApplicantsActivity"
    android:background="@color/white_dash"
    >

    <LinearLayout
        android:id="@+id/layout_topBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/bg_white_7sdp_rounded"
            >
            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_ic"
                app:tint="@color/grayShadeThree"
                android:contentDescription="@string/text_todo"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/text_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/flaggedApplicants"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            />
    </LinearLayout>


    <EditText
        android:id="@+id/edSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_topBar"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/search_user_border"
        android:drawableEnd="@drawable/ic_baseline_search_24"
        android:drawablePadding="@dimen/_8sdp"
        android:hint="Search Users"
        android:padding="@dimen/_8sdp"
        android:paddingStart="24dp"
        android:paddingEnd="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_flaggedApplicants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edSearch"
        tools:listitem="@layout/single_item_flagged_applicant"
        android:layout_marginTop="@dimen/_5sdp"
        android:visibility="gone"
        />


    <RelativeLayout
        android:id="@+id/layout_noApplicants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/single_item_flagged_applicant"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/permissionImage"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/text_todo"
                android:src="@drawable/no_results_ic" />

            <TextView
                android:id="@+id/text_enableLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/permissionImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="No Results Found"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_enableLocation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="No results found against this search\n You can search for other flagged applicants"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>