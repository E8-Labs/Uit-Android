<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.welcome.UploadCompanyLogoActivity"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Next"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/standardInformationLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next">

        <TextView
            android:id="@+id/companyAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="@string/companyAccount"
            android:textColor="@color/blackShadeOne"
            android:textSize="@dimen/_14sdp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/standardInformationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="@string/standardInformation"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_12sdp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/companyAccount" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/standardInformationText">

            <ImageView
                android:id="@+id/firstCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:src="@drawable/app_color_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/secondCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/firstCircle2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/thirdCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/secondCircle2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fourCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/thirdCircle2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fiveCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fourCircle2"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/sixCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fiveCircle2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/sevenCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sixCircle2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/eightCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sevenCircle2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/nineCircle2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_4sdp"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/eightCircle2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/companyLogoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="@string/companyLogo"
        android:textColor="@color/black"
        android:textSize="@dimen/UITLargeTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standardInformationLayout" />

    <TextView
        android:id="@+id/highQualityImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="left"
        android:text="@string/highQualityImage"
        android:textColor="@color/companyLogo"
        android:textSize="@dimen/UITSmallTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyLogoText" />


    <ImageView
        android:id="@+id/companyLogoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="@dimen/_8sdp"
        android:src="@drawable/change_picture_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highQualityImage" />

    <TextView
        android:id="@+id/changePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="left"
        android:text="@string/addPicture"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="@+id/companyLogoImage"
        app:layout_constraintStart_toStartOf="@+id/companyLogoImage"
        app:layout_constraintTop_toBottomOf="@+id/companyLogoImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>

