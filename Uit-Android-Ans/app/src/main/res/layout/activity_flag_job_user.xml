<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.jobs.FlagJobUserActivity"
    android:background="@color/white_dash"
    >

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">

        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_47sdp"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_white_rounded_10dp"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/text_todo"
                android:src="@drawable/ic_back_arrow" />


        </RelativeLayout>


        <TextView
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_15sdp"
            android:text="Send"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profileImageView"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:scaleType="centerCrop"
        android:layout_below="@id/layout_main"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:contentDescription="@string/text_todo"
        app:riv_corner_radius="@dimen/_30sdp"
        android:src="@color/app_color"
        />

    <TextView
        android:id="@+id/text_profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_bold"
        android:text="Robert Osborn"
        android:textColor="@color/codGrey"
        android:textSize="@dimen/_18sdp" />


    <RelativeLayout
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_white_rounded_10dp_outline"
        android:layout_below="@id/text_profileName"
        android:elevation="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        >

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:hint="Tell us why you're flagging this user"
            android:inputType="textMultiLine"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:textColor="@color/codGrey"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>


</RelativeLayout>