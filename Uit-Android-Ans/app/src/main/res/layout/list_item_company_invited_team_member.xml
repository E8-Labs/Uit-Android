<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_white_7sdp_rounded"
    android:paddingVertical="@dimen/_15sdp"
    android:elevation="@dimen/_1sdp"
    >
    <RelativeLayout
        android:id="@+id/layout_userProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        >

        <RelativeLayout
            android:id="@+id/card_profileImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/app_color_20dp_rounded">

            <TextView
                android:id="@+id/text_firstLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_toEndOf="@id/card_profileImage"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/text_memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Member Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/text_memberEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="MemberE mail"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>