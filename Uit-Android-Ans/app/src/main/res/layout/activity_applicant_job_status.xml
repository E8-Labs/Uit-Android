<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applicant.welcome.ActivityApplicantJobStatus"
    android:background="@color/white"
    >

    <include
        android:id="@+id/includeEmploye"
        layout="@layout/simple_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noahLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeEmploye">

        <ImageView
            android:id="@+id/menYellow"
            android:layout_width="@dimen/_54sdp"
            android:layout_height="@dimen/_54sdp"
            android:layout_marginStart="24dp"
            android:paddingStart="@dimen/_8sdp"
            android:src="@drawable/men_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/applicantAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="@string/applicantAccount"
            android:textColor="@color/blackShadeOne"

            android:textSize="@dimen/UITNormalTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menYellow"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/diversity2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="@string/professionalInformation"
            android:textColor="@color/app_color"
            android:textSize="@dimen/UITMediumTextSize"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menYellow"
            app:layout_constraintTop_toBottomOf="@+id/applicantAccount" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/circles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noahLayout2">

        <ImageView
            android:id="@+id/firstCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"

            android:src="@drawable/app_color_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/secondCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/firstCircle2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/thirdCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/secondCircle2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fourCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thirdCircle2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fiveCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fourCircle2"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/sixCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fiveCircle2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sevenCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sixCircle2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/eightCircle2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginStart="3dp"
            android:src="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sevenCircle2"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/employmentStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="@string/employmentStatus"
        android:textColor="@color/black"
        android:textSize="@dimen/UITLargeTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circles" />

    <TextView
        android:id="@+id/employ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="left"
        android:text="@string/currentEmployment"
        android:textColor="@color/black"
        android:textSize="@dimen/UITMediumTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employmentStatus" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/approvedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/industry_borders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employ">


        <TextView
            android:id="@+id/unEmployed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingLeft="@dimen/_58sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingRight="@dimen/_58sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="@string/unemployed"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pausedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/industry_borders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/approvedLayout">

        <TextView
            android:id="@+id/employed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingLeft="@dimen/_58sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingRight="@dimen/_58sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="@string/employedButLooking"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pendingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/industry_borders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pausedLayout">

        <TextView
            android:id="@+id/notLooking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingLeft="@dimen/_58sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingRight="@dimen/_58sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:text="@string/employedNotLooking"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>