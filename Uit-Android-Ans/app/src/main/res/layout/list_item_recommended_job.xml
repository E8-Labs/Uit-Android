<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_white_rounded_15dp"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:elevation="0.5dp"
    >

    <LinearLayout
        android:id="@+id/layoutJobDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toStartOf="@id/text_matchPercentage"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/jobImage"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_56sdp"
            android:src="@color/yellow"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_10sdp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp"
            >
            <TextView
                android:id="@+id/text_jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="UI/UX Designer"
                android:textColor="@color/codGrey"
                android:textSize="@dimen/_14sdp"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/text_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Google"
                android:textColor="@color/codGreyFiftyTransparent"
                android:textSize="@dimen/_12sdp"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="San Francisco, CA"
                android:textColor="@color/codGreyFiftyTransparent"
                android:textSize="@dimen/_12sdp"
                android:maxLines="1"
                />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_matchPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/color_yellow_left_5dp_bottom_right_3dp_rounded"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_1sdp"
        android:text="92% match"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_jobTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutJobDetail"
        android:layout_marginTop="10dp"
        tools:itemCount="1"
        tools:listitem="@layout/design_job_tag" />
</RelativeLayout>