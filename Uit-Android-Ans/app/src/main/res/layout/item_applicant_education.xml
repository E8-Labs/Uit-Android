<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/white_background"
    >

    <TextView
        android:id="@+id/fieldOfStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="start"
        android:text="Art"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:maxLength="50"
        />

    <View
        android:id="@+id/viewHorizontal"
        android:layout_width="@dimen/_2sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@color/black"
        android:layout_toEndOf="@id/fieldOfStudy"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/universityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="start"
        android:text="University Of California"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toEndOf="@+id/viewHorizontal"
        android:maxLength="50"
        />

    <TextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="start"
        android:text="Professional of University of certification"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:layout_below="@id/universityName"/>

    <TextView
        android:id="@+id/deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="start"
        android:text="MAY 2020 - JUNE 2020"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:layout_below="@+id/profession" />

    <TextView
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="start"
        android:text="Edit"
        android:textColor="@color/app_color"
        android:textSize="@dimen/_14sdp"
        android:layout_below="@id/deadline"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>