<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.jobs.CloseJobActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_30sdp"
        >
        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@drawable/bg_white_rounded_6dp"
            android:elevation="@dimen/_1sdp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/text_todo"
                android:src="@drawable/cross_ic" />
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_endJobs"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/end_job_ic"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            app:riv_oval="true"/>

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are about to closing the job"
                android:textColor="@color/codGrey"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/text_jobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="software engineering needed."
                android:textColor="@color/app_color"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_reasonClosing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Reason for closing"
            android:textColor="@color/codGrey"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:id="@+id/layout_closeReason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/app_color_4dp_rounded_outline"
            android:layout_marginHorizontal="@dimen/_10sdp"
            >

            <EditText
                android:id="@+id/editTextReason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:hint="Reason for closing"
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="@color/codGrey"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btnCloseJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Submit and close"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/app_color_7dp_rounded"
            android:backgroundTint="@color/red_light"
            android:paddingHorizontal="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            />


    </LinearLayout>

</ScrollView>