<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_select_user_type"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_12sdp"
        android:text="Select account type"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:textSize="@dimen/UITNormalTextSize" />

    <TextView
        android:id="@+id/btn_selectTeamMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/_15sdp"
        android:background="@drawable/app_color_4dp_rounded_outline"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_12sdp"
        android:text="@string/teamMember"
        android:textColor="@color/app_color"
        android:textSize="@dimen/UITNormalTextSize"
        android:layout_marginHorizontal="@dimen/_30sdp"
        />

    <TextView
        android:id="@+id/btn_selectCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@drawable/app_color_4dp_rounded_outline"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingVertical="@dimen/_12sdp"
        android:text="@string/company"
        android:textColor="@color/app_color"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:textSize="@dimen/UITNormalTextSize" />

</LinearLayout>