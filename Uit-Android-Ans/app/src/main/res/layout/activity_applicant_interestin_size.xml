<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applicant.welcome.ApplicantInterestInSizeActivity"
    android:background="@color/white"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include
                android:id="@+id/includeStage"
                layout="@layout/simple_skip"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                 />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/noahLayout2"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginTop="24dp"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/redNoah2"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@color/app_color"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/text_todo"
                    android:scaleType="centerCrop"
                    app:riv_oval="true"
                    />


                <TextView
                    android:id="@+id/companyAccount2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="left"
                    android:text="@string/applicantAccount"
                    android:textColor="@color/blackShadeOne"
                    android:textSize="@dimen/_14sdp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/redNoah2"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/diversity2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="left"
                    android:text="@string/professionalInformation"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_12sdp"

                    app:layout_constraintStart_toEndOf="@+id/redNoah2"
                    app:layout_constraintTop_toBottomOf="@+id/companyAccount2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/redNoah2"
                    app:layout_constraintTop_toBottomOf="@+id/diversity2">

                    <ImageView
                        android:id="@+id/firstCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:src="@drawable/app_color_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/secondCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/app_color_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/firstCircle2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/thirdCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/app_color_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/secondCircle2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/fourCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/app_color_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/thirdCircle2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/fiveCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/app_color_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fourCircle2"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/sixCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/app_color_circle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fiveCircle2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/sevenCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/ic_baseline_remove_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/sixCircle2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/eightCircle2"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginStart="3dp"
                        android:src="@drawable/ic_baseline_remove_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/sevenCircle2"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/companyBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/companySize"
                android:textColor="@color/black"
                android:textSize="@dimen/UITLargeTextSize"
                 />

            <TextView
                android:id="@+id/briefCompanyBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="@string/selectSize"
                android:textColor="@color/black"
                android:textSize="@dimen/UITMediumTextSize"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/company_size_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:nestedScrollingEnabled="false"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/info_ic"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/text_todo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/companySize"
                    android:textColor="@color/black"
                    android:textSize="@dimen/UITLargeTextSize"
                    android:layout_marginStart="@dimen/_7sdp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/selectSizeDetail"
                android:textColor="@color/smokey_grey"
                android:textSize="@dimen/UITMediumTextSize"

                />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>