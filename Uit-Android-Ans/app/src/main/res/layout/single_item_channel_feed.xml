<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/layout_profile"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/app_color_outline_rounded_50dp"
        android:layout_centerHorizontal="true"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/channel_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/noah_admin"
            android:layout_centerInParent="true"
            android:contentDescription="@string/text_todo"
            app:riv_corner_radius="@dimen/_25sdp"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/btn_editChannel"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_minus20sdp"
            android:layout_toEndOf="@id/channel_image"
            android:contentDescription="@string/text_todo"
            android:src="@drawable/new_edit_ic"
            android:layout_marginTop="@dimen/_minus3sdp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="Tech"
        android:textColor="@color/codGrey"
        android:textSize="@dimen/_10sdp"
        android:maxLength="8"
        android:ellipsize="end"
        />

</RelativeLayout>